@using WebsiteBanQuanAo.Models;
@model List<tbSanPham>
@foreach (var item in Model)
{
    float giasp = (float)item.GiaSanPham;
    float giakm = (float)item.GiaKhuyenMai;
    <div class="col-md-3 arrival-grid simpleCart_shelfItem">
        <div class="grid-arr">
            <a href="@Url.Action("XemChiTietSanPham","XemChiTiet", new {masanpham = item.MaSanPham })">
                <div class="grid-arrival">
                    <figure>
                            <div class="grid-img">
                                <img src="~/Content/Layout/images/@item.AnhMatTruoc" class="img-responsive" alt="" style="width: 100%; height:300px">
                            </div>
                    </figure>
                </div>
                <div class="ribben">
                    <p>@item.SanPhamMoiorCu</p>
                </div>
                <div class="ribben1">
                    @if (item.Sale == true)
                    {
                        <p>Đang Sale</p>
                    }
                </div>
                <div class="ribben2">
                    <p>Hết Hàng</p>
                </div>
                <div class="block">
                    @Html.Action("DanhGia2", "DanhGia2", new { masanpham = item.MaSanPham })
                </div>
                <div class="women">
                    <h6>@item.TenSanPham</h6>
                    <span class="size">@item.KichThuocSanPham </span>
                    <p><del>@giakm.ToString("#,##0") VNĐ. </del><em class="item_price">@giasp.ToString("#,##0") VNĐ.</em></p>
                    <a href="@Url.Action("ThemVaoGioHang","GioHang", new {masanpham = item.MaSanPham })" data-text="Add To Cart" class="my-cart-b item_add">Thêm vào giỏ hàng</a>
                </div>
            </a>
        </div>
    </div>
}
