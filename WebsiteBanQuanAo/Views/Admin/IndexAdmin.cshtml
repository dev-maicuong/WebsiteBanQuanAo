@using WebsiteBanQuanAo.Models;
@{
    ViewBag.Title = "IndexAdmin";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
    tbAdmin admin = (tbAdmin)Session["Admin"];
}

@if (admin != null)
{
    <div class="col_3">
        <div class="col-md-3 widget widget1">
            <div class="r3_counter_box">
                <a href="/AdminQuanLyTTTT/Index">
                    <i class="pull-left fa fa-dollar icon-rounded"></i>
                    <div class="stats">
                        <h5><strong>@Html.Action("TongTien", "Admin")</strong></h5>
                        <span>Tổng tiền</span>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-md-3 widget widget1">
            <div class="r3_counter_box">
                <i class="pull-left fa fa-laptop user1 icon-rounded"></i>
                <div class="stats">
                    <h5><strong>$1019</strong></h5>
                    <span>Online Revenue</span>
                </div>
            </div>
        </div>
        <div class="col-md-3 widget widget1">
            <div class="r3_counter_box">
                <a href="/AdminQuanLyDatHang/Index">
                    <i class="pull-left fa fa-money user2 icon-rounded"></i>
                    <div class="stats">
                        <h5><strong>@Html.Action("TongDatHang", "Admin")</strong></h5>
                        <span>Tổng đơn đặt hàng</span>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-md-3 widget widget1">
            <div class="r3_counter_box">
                <i class="pull-left fa fa-pie-chart dollar1 icon-rounded"></i>
                <div class="stats">
                    <h5><strong>$450</strong></h5>
                    <span>Expenditure</span>
                </div>
            </div>
        </div>
        <div class="col-md-3 widget">
            <div class="r3_counter_box">
                <a href="/AdminQuanLyNguoiDung/Index">
                    <i class="pull-left fa fa-users dollar2 icon-rounded"></i>
                    <div class="stats">
                        <h5><strong>@Html.Action("TongNguoiDung", "Admin")</strong></h5>
                        <span>Tổng người dùng</span>
                    </div>
                </a>
            </div>
        </div>
        <div class="clearfix"> </div>
    </div>
}
else
{
    Response.Redirect("/DangNhap/DangNhap");
}

