@model IEnumerable<WebsiteBanQuanAo.Models.TraLoiBinhLuan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<table class="table table-bordered table-striped table-hover">
    <tr class="bg-danger text-white">
        <th>
            @Html.DisplayNameFor(model => model.NoiDungTraLoi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BinhLuan.NoiDungBinhLuan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tbNguoiDung.TenNguoiDung)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NoiDungTraLoi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BinhLuan.NoiDungBinhLuan)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tbNguoiDung.TenNguoiDung)
        </td>
        <td>
            <a href="@Url.Action("Details", "AdminQuanLyTraLoi", new { id = item.MaTraLoiBinhLuan })"><i class="fas fa-eye"></i></a> |
            <a href="@Url.Action("Delete", "AdminQuanLyTraLoi", new { id = item.MaTraLoiBinhLuan })"><i class="fas fa-trash-alt"></i></a>
        </td>
    </tr>
}

</table>
