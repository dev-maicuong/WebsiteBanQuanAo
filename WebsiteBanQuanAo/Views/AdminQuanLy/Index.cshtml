@model IEnumerable<WebsiteBanQuanAo.Models.tbAdmin>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
    var idadmin = "idadmin";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Tạo", "Create")
</p>
<table class="table table-bordered table-striped table-hover">
    <tr class="bg-danger text-white">
        <th>
            @Html.DisplayNameFor(model => model.TaiKhoanAdmin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MatKhauAdmin)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TaiKhoanAdmin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MatKhauAdmin)
            </td>
            <td>
                <a href="@Url.Action("Edit", "AdminQuanLy", new { id = item.MaAdmin })"><i class="fa fa-edit" ></i></a> |
                <a href="#" data-toggle="modal" data-target="#@idadmin@item.MaAdmin"><i class="fa fa-eye"></i></a> |
                @Html.ActionLink("Delete", "Delete", new { id = item.MaAdmin })
            </td>
        </tr>
        <div class="modal fade" id="@idadmin@item.MaAdmin" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="staticBackdropLabel">Modal title</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        @item.TaiKhoanAdmin<br />
                        @item.MatKhauAdmin<br />
                        @item.MaAdmin
                        <img src="~/Content/LayoutAdmin/images/" />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Understood</button>
                    </div>
                </div>
            </div>
        </div>
    }

</table>
