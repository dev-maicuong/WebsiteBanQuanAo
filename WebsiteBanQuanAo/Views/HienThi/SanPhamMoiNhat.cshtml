@using WebsiteBanQuanAo.Models;
@model List<tbSanPham>
<div class="new-arrivals-w3agile">
    <div class="container">
        <h2 class="tittle">Sản phẩm mới</h2>
        <div class="arrivals-grids">
            @foreach (var item in Model.OrderByDescending(n=>n.NgayTao).Take(8))
            {
                <div class="col-md-3 arrival-grid simpleCart_shelfItem">
                    <div class="grid-arr">
                        <div class="grid-arrival">
                            <figure>
                                <a href="@Url.Action("XemChiTietSanPham","XemChiTiet", new {masanpham = item.MaSanPham })" class="new-gri">
                                    <div class="grid-img">
                                        <img src="~/Content/Layout/images/@item.AnhMatTruoc" class="img-responsive" alt="">
                                    </div>
                                    <div class="grid-img">
                                        <img src="~/Content/Layout/images/@item.AnhMatSau" class="img-responsive" alt="">
                                    </div>
                                </a>
                            </figure>
                        </div>
                        <div class="ribben">
                            <p>@item.SanPhamMoiorCu</p>
                        </div>
                        @if (item.Sale == true)
                        {
                            <div class="ribben1">
                                <p>Đang giảm giá</p>
                            </div>
                        }
                        else
                        {

                        }
                    <div class="block">
                        @Html.Action("DanhGia2", "DanhGia2", new { masanpham = item.MaSanPham })

                    </div>
                        <div class="women">
                            <h6><a href="single.html">@item.TenSanPham</a></h6>
                            <span class="size">@item.KichThuocSanPham </span>
                            <p><del>@item.GiaKhuyenMai </del><em class="item_price">@item.GiaSanPham VND</em></p>
                            <a href="@Url.Action("ThemVaoGioHang","GioHang", new { masanpham = item.MaSanPham})" data-text="Add To Cart" class="my-cart-b item_add">Thêm vào giỏ</a>
                        </div>
                    </div>
                </div>
            }
            <div class="clearfix"></div>
        </div>
    </div>
</div>

