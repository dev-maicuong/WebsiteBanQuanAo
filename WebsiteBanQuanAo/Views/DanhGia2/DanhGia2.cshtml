@using WebsiteBanQuanAo.Models;
@model List<DanhGia>
@{
    int tongdanhgia = (int)Model.Sum(n => n.DanhGia1);
    int luotdanhgia = Model.Count();
    float dg = (float)tongdanhgia / (float)luotdanhgia;
    int sosanh = (int)dg;
}

@if (Model.Count() == 0)
{
    <i class="fas fa-star" style="color:black"></i>
    <i class="fas fa-star" style="color:black"></i>
    <i class="fas fa-star" style="color:black"></i>
    <i class="fas fa-star" style="color:black"></i>
    <i class="fas fa-star" style="color:black"></i>
}
else
{
    if (dg != sosanh)
    {
        for (int i = 0; i < sosanh; i++)
        {
            <i class="fas fa-star" style="color:darkorange"></i>
        }
        <i class="fas fa-star-half" style="color:darkorange"></i>
        for (int j = sosanh + 1; j < 5; j++)
        {
            <i class="fas fa-star" style="color:black"></i>
        }
    }
    else
    {
        for (int i = 0; i < sosanh; i++)
        {
            <i class="fas fa-star" style="color:darkorange"></i>
        }
        for (int j = sosanh; j < 5; j++)
        {
            <i class="fas fa-star" style="color:black"></i>
        }
    }
}