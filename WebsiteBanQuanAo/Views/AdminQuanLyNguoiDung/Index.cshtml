@model IEnumerable<WebsiteBanQuanAo.Models.tbNguoiDung>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
    var idnguoidung = "idnguoidung";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Tạo", "Create")
</p>
<table class="table table-bordered table-striped table-hover">
    <tr class="bg-danger text-white">
        <th>
            @Html.DisplayNameFor(model => model.TenNguoiDung)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiaChiNguoiDung)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SDTNguoiDung)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GioiTinhNguoiDung)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenNguoiDung)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChiNguoiDung)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SDTNguoiDung)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GioiTinhNguoiDung)
            </td>
            <td>
                <a href="@Url.Action("Edit", "AdminQuanLyNguoiDung", new { id = item.MaNguoiDung })"><i class="fa fa-edit"></i></a> |
                <a href="#" data-toggle="modal" data-target="#@idnguoidung@item.MaNguoiDung"><i class="fa fa-eye"></i></a>|
                <a href="@Url.Action("Delete", "AdminQuanLyNguoiDung", new { id = item.MaNguoiDung })"><i class="fas fa-trash-alt"></i></a>
            </td>
        </tr>
        <div class="modal fade" id="@idnguoidung@item.MaNguoiDung" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="staticBackdropLabel">Modal title</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <pre style="font-size: 15px; font-family: Arial">
@item.TenNguoiDung
@item.TaiKhoanNguoiDung
@item.MatKhauNguoiDung
@item.MatKhauNguoiDung
@item.DiaChiNguoiDung
@item.SDTNguoiDung
@item.GioiTinhNguoiDung
@item.Token
</pre>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Understood</button>
                    </div>
                </div>
            </div>
        </div>
    }
</table>
